{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "fluid": true,
  "rewrites": [
    {
      "source": "/mcp",
      "destination": "/api/raindrop"
    },
    {
      "source": "/health",
      "destination": "/api/health"
    },
    {
      "source": "/auth/init",
      "destination": "/api/auth/init"
    },
    {
      "source": "/auth/callback",
      "destination": "/api/auth/callback"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "regions": [
    "iad1"
  ],
  "headers": [
    {
      "source": "/api/raindrop",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}