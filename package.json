{
  "name": "@aarekaz/raindrop-mcp",
  "version": "0.1.0",
  "description": "MCP Server for Raindrop.io bookmark management",
  "main": "build/index.js",
  "module": "build/index.js",
  "type": "module",
  "bin": {
    "raindrop-mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "dev": "bun run build && bun --watch src/index.ts",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "build": "bun build --target=node --format=esm --bundle --sourcemap --outdir=build ./src/index.ts",
    "start": "bun run build/index.js",
    "clean": "rm -rf build"
  },
  "keywords": [
    "mcp",
    "raindrop.io",
    "modelcontextprotocol",
    "mcp-server",
    "raindrop",
    "bookmarks",
    "ai-assistant",
    "typescript"
  ],
  "author": "Anurag Dhungana",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aarekaz/raindrop-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Aarekaz/raindrop-mcp/issues"
  },
  "homepage": "https://github.com/Aarekaz/raindrop-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "axios": "^1.12.2",
    "dotenv": "^17.2.2",
    "openapi-fetch": "^0.14.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "@types/node": "^24.5.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}